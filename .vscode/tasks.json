{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "${workspaceFolder}/build_odin.sh",
            // "args": [ "" ],
            "problemMatcher": "$gcc"
        },

        // {
        //     "label": "build-debug",
        //     "type": "shell",
        //     "command": "${workspaceFolder}/build_odin.sh",
        //     "args": [ "debug" ],
        //     "problemMatcher": "$gcc"
        // },
        {
            "label": "build-oc_sandbox",
            "type": "shell",
            "command": "odin",
            "options": {"cwd": "${workspaceFolder}"},
            "args": [
                "build",
                "bugs/oc_classes/oc_selectors.odin",
                "-file",
                "-out:.bin/oc_selectors",
                "-o:none",
                "-debug",
                "-minimum-os-version:14.0.0",
                "-target:darwin_arm64",
                "-thread-count:4",
                // "-no-threaded-checker",
                // -use-single-module
                // -keep-temp-files

            ],
            "problemMatcher": {
                "owner": "odin",
                "fileLocation": ["absolute"],
                "pattern": {
                    "regexp": "^(.+)\\(([0-9]+)\\:([0-9]+)\\) ([^:]+)(.+)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },

        {
            "label": "build-debug",
            "type": "shell",
            "command": "cmake",
            "options": {"cwd": "${workspaceFolder}/build"},
            
            "args": [
                "--build", ".",
                "--target", "odin",
                "--config", "Debug",
                "-j", "16"
            ],

            "group": {
                "kind": "build",
                "isDefault": true
            },
            
            "windows":{},
            "linux":{"problemMatcher": [ "$gcc" ]},
            "osx":{"problemMatcher": [ "$gcc" ]},
        }
    ]
}